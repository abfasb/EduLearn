generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  STUDENT
  INSTRUCTOR
}

model User {
  id        Int      @id @default(autoincrement())
  name      String   @default("")
  email     String   @unique
  password  String   @db.VarChar(60)
  role      Role
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}